{% extends '../base.html.twig' %}

{% block body %}
    <main class="container">
        <div class="navbar-filler"></div>
        <div>
            <h2>{{ dict._new ~ ' ' ~ dict.brand }}</h2>
            <a href="/worker-panel">{{ dict.back }}</a>
        </div>
        <div class="row">
            <div class="col-lg-9">
                <div class="">
                   {% embed 'partials/add-brand-form.twig' %} {% endembed %}
                </div>
            </div>
            {% embed '../partials/sidebar/sidebar.html.twig' %}
                {% block sidebarBody %}
                    {% embed '../partials/sidebar/brands.html.twig' with {'title':dict.all ~ ' ' ~ dict.brands, 'brands':informer.getAllBrands } %} {% endembed %}
                {% endblock %}
            {% endembed %}
        </div>
    </main>
{% endblock %}