{% extends '../base.html.twig' %}

{% block body %}
    <main>
        {% embed '../partials/home-banner.html.twig' with {'title':reason} %} {% endembed %}
        <div class="container p-2">
            <div class="row">
                <div class="col-md-5">
                    <img src="/files/images/500.png" width="100%" height="100%">
