<div class="col-lg-4 col-md-6 mb-4">
    <div class="card h-100">
        <a href="/products/{{ product.id }}"><img class="card-img-top" src="{{ product.image }}" height="200px"
                         alt="{{ product.description }}"></a>
        <div class="card-body">
            <h4 class="card-title">
                <a href="/brands/{{ product.brand.brandName }}" class="text-success">{{ product.brand.brandName }}</a>
            </h4>
            <h5>${{ product.price }}</h5>
            <p class="card-text">{{ product.productName }}</p>
        </div>
        <div class="card-footer">
            <small class="text-muted row">
                <a class="col-md-5 btn btn-sm btn-success " href="/products/{{ product.id }}">{{ dict.details }}</a>
                <button class="col-md-5 btn btn-sm btn-dark ml-auto">{{ dict.buy }}</button>
            </small>
        </div>
    </div>
</div>