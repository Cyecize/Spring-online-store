<div class="sidebar-item">
    <p class="font-15em">{{ title }}</p>
    <ul class="list-group" style="-webkit-border-radius: 10px;-moz-border-radius: 10px;border-radius: 10px;">
        {% for category in categories %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <a href="#">{{ util.getLocalCategoryName(category) }}</a>
                <span class="badge badge-primary badge-pill">{{ category.activeProductsRecursive()|length }}</span>
            </li>
        {% endfor %}
    </ul>
</div>