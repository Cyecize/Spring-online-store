{% extends '../base.html.twig' %}

{% block body %}
<div style="height: 100px;" class="d-md-block d-none d-sm-none"></div>
    <div class="container">
        <div class="row ">

            <div class="col-lg-9">
                <div class="text-center">
                    <h2>{{ dict.login }}</h2>
                </div>
                <div class="sky-color-separator"></div>
                <form method="post" enctype="multipart/form-data" class="w-50">
                    {% if error %}
                        <h2 class="alert alert-danger">{{ error }}</h2>
                    {% endif %}
                    <div class="form-group">
                        <label for="username">Username Or Email?</label>
                        <input name="username" id="username" required type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input name="password" id="password" required type="password" class="form-control">
                    </div>
                    <div class="sky-color-separator"></div>
                    <div class="form-group">
                        <input type="checkbox" name="rememberMe" id="rememberMe">
                        <label for="rememberMe">Remember me?</label>
                    </div>
                    <div class="sky-color-separator"></div>

                    {% embed '../partials/csrf.twig' %} {% endembed %}

                    <div >
                        <button type="submit" class="btn btn-primary">{{ dict.login }}</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}