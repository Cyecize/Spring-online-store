{% extends '../base.html.twig' %}
{% block body %}
    <div style="height: 100px;" class="d-md-block d-sm-none"></div>

    <div class="container">
        <div class="text-center"><h2>Register</h2></div>
        <div class="row">
        <div class="col-lg-9">

            <form method="post" enctype="multipart/form-data" class="w-75">

                <div class="form-group">
                    <label for="username">Username</label>
                    <input name="username" id="username" required type="text" value="{{ userRegisterModel.username }}"
                           class="form-control">
                    <p class="text-danger">{{ util.getError('username') }}</p>
                </div>

                <div class="form-group">
                    <label for="email">Email</label>
                    <input value="{{ userRegisterModel.email }}" name="email" id="email" required type="email"
                           class="form-control">
                    <p class="text-danger">{{ util.getError('email') }}</p>
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input name="password" id="password" required type="password" class="form-control">
                    <p class="text-danger">{{ util.getError('password') }}</p>
                </div>

                <div class="form-group">
                    <label for="passwordConfirm">Password Again</label>
                    <input name="passwordConfirm" id="passwordConfirm" required type="password" class="form-control">
                </div>

                {% embed '../partials/csrf.twig' %} {% endembed %}
                <div>
                    <button type="submit" class="btn btn-success">{{ dict.go }}</button>
                </div>
            </form>
        </div>
        <div class="col-lg-3">
            <h3>Sidebar</h3>
        </div>

    </div>
    </div>
{% endblock %}