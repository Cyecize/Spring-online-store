{% extends '../base.html.twig' %}
{% block title %}{{ dict.aboutUs }}{% endblock %}

{% block body %}
    <main>
    {% embed '../partials/home-banner.html.twig' with {'title':dict.aboutUs} %} {% endembed %}
    <div class="container">

        <div class="row">
            <div class="col-lg-9">
                {% embed '../partials/lang/' ~ locale ~ '/about-us-text.html.twig' %} {% endembed %}
            </div>
            {% embed '../partials/sidebar/sidebar.html.twig' %}
                {% block sidebarBody %}
                    {% embed '../partials/sidebar/categories.html.twig' with {'title':dict.categories, 'categories':informer.getCategoriesToDisplay } %} {% endembed %}
                    {% embed '../partials/sidebar/products.html.twig' with {'products':informer.getNewProducts, 'title':dict.newProducts} %} {% endembed %}
                {% endblock %}
            {% endembed %}
        </div>
    </div>
{% endblock %}