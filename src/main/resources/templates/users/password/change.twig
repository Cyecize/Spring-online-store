{% extends '../index.twig' %}

{% block title %}Edit password {% endblock %}

{% block userBody %}
<div>
    <h3 class="text-info">{{ dict._new }} {{ dict.password}}</h3>
    <a href="/users/profile">{{ dict.back }}</a>
    <hr class="hr-dark">
</div>
<div>
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="oldPassword">{{ dict.old }} {{ dict.password }}</label>
            <input placeholder="*********" name="oldPassword" id="oldPassword" required type="password" class="form-control">
            <p class="text-danger">{{ util.getError('oldPassword') }}</p>
        </div>
        <div class="form-group">
            <label for="password">{{ dict._new }} {{ dict.password }}</label>
            <input placeholder="*********" name="password" id="password" required type="password" class="form-control">
            <p class="text-danger">{{ util.getError('password') }}</p>
        </div>

        <div class="form-group">
            <label for="passwordConfirm">{{ dict.password }} </label>
            <input placeholder="{{ dict.password }}" name="passwordConfirm" id="passwordConfirm" required type="password" class="form-control">
        </div>
        {% embed '../../partials/csrf.twig' %} {% endembed %}
        <button type="submit" class="btn btn-dark">{{ dict.go }}</button>
    </form>
</div>

{% endblock %}