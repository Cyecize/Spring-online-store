{% extends '../base.html.twig' %}

{% block body %}
    <main>
        {% embed '../partials/home-banner.html.twig' with {'title':"Users' panel" } %} {% endembed %}
        <div class="container">
            <div class="row">
                {% embed '../partials/sidebar/sidebar.html.twig' %}
                    {% block sidebarBody %}
                        <div class="sidebar-item">
                            <p class="font-15em">{{ dict.addresses }}</p>
                            <ul class="list-group">
                                <li class="list-group-item"><a href="/users/addresses/add">{{ dict.newAddress }}</a></li>
                                <li class="list-group-item"><a href="/users/addresses/all">{{ dict.all  }} {{ dict.addresses }}</a></li>
                            </ul>
                        </div>
                        <div class="sidebar-item">
                            <p class="font-15em">{{ dict.orders }}</p>
                            <ul class="list-group">
                                <li class="list-group-item"><a href="/users/orders/all">{{ dict.all }} {{ dict.orders }}</a></li>
                            </ul>
                        </div>
                    {% endblock %}
                {% endembed %}
                <div class="col-lg-9" id="section-content" style="display:none;">
                    {% block userBody %}
                        {% embed '../partials/lang/' ~ locale ~ '/select-option-from-menu.html.twig' %} {% endembed %}
                    {% endblock %}
                </div>
            </div>
        </div>
    </main>
    <script>
        $(function () {
            $('#section-content').fadeIn(300);
        });
    </script>
{% endblock %}
